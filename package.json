{
  "name": "ssh-terminal",
  "displayName": "SSH Terminal",
  "description": "Can create a custom ssh terminal to connect to.",
  "keywords": [
    "SSH",
    "Connection",
    "Terminal"
  ],
  "version": "0.0.1",
  "publisher": "gratschi",
  "engines": {
    "vscode": "^1.91.0"
  },
  "author": {
    "name": "David Gratschmayer",
    "email": "gratschmayer.david@gmail.com"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gratschi/ssh-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/gratschi/ssh-terminal/issues"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ssh-terminal.modify",
        "title": "SSH Terminal: Modify..."
      },
      {
        "command": "ssh-terminal.connect",
        "title": "SSH Terminal: Connect..."
      },
      {
        "command": "ssh-terminal.encrypt",
        "title": "SSH Terminal: Encrypt terminal password"
      },
      {
        "command": "ssh-terminal.sshkey.create",
        "title": "SSH Terminal: Create SSH Key for terminal"
      },
      {
        "command": "ssh-terminal.cache.clear",
        "title": "SSH Terminal: Clearing Cache"
      }
    ],
    "configuration": [
      {
        "title": "SSH",
        "properties": {
          "ssh-terminal.ssh.configPaths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "${env:HOME}\\.ssh\\config"
            ],
            "description": "An array of ssh config paths which you can use for the terminal"
          },
          "ssh-terminal.ssh.encryption": {
            "type": "string",
            "default": "RSA",
            "enum": [
              "RSA",
              "DSA",
              "ECDSA",
              "EdDSA"
            ],
            "description": "The ssh encryption type for the created ssh keys"
          },
          "ssh-terminal.ssh.autoKey": {
            "type": "boolean",
            "default": false,
            "description": "Automatically creates a ssh key if you log in with a password (Experimental)"
          }
        }
      },
      {
        "title": "Terminal",
        "properties": {
          "ssh-terminal.terminal.icon": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "enum": [
              "Black",
              "Blue",
              "Cyan",
              "Green",
              "Magenta",
              "Red",
              "White",
              "Yellow",
              null
            ],
            "description": "Terminal icon color. You can also type in a hex value (Experimental)."
          },
          "ssh-terminal.terminal.color": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "enum": [
              "Black",
              "Blue",
              "Cyan",
              "Green",
              "Magenta",
              "Red",
              "White",
              "Yellow",
              null
            ],
            "description": "Terminal icon color. You can also type in a hex value (Experimental)."
          },
          "ssh-terminal.terminal.greetingMessage": {
            "type": ["string", "null"],
            "default": "Opened with VSCode SSH Terminal",
            "description": "Terminal custom greeting message. Hides env vars. If it's set to null will connect normally. (Experimental)"
          }
        }
      },
      {
        "title": "Cache",
        "properties": {
          "ssh-terminal.cache.force": {
            "type": "boolean",
            "default": false,
            "description": "Cache clear force. Will clear ssh keys of every terminal even if it's valid."
          },
          "ssh-terminal.cache.clearKeys": {
            "type": "boolean",
            "default": true,
            "description": "Clear ssh keys. If it's set to true, it will clear the ssh keys, that are not defined in a terminal."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "comment-json": "^4.2.5",
    "node-ssh": "^13.2.0",
    "ssh-keygen-lite": "^1.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/node-ssh": "^7.0.6",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}
